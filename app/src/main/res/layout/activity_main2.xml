<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_resultat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_resIMC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="El seu IMC és: "
        android:textColor="@color/black"
        android:paddingTop="20dp"
        android:paddingRight="15dp"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_resultat"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/valor_Imc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/tv_resIMC"
        app:layout_constraintLeft_toRightOf="@id/tv_resIMC"
        />
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vostè es troba en el grup: "
        android:textColor="@color/black"
        android:paddingTop="20dp"
        android:paddingRight="15dp"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/valor_Imc"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_taula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingTop="16dp"
        android:text=""
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/valor_Imc"
        app:layout_constraintLeft_toRightOf="@id/tv1" />

    <Button
        android:id="@+id/btn_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ANAR A MENÚ"
        android:onClick="volverOnClick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/tv_taula"
        />

</androidx.constraintlayout.widget.ConstraintLayout>